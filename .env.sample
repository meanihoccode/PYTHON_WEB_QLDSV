# ==============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ==============================================
# AI/CHATBOT CONFIGURATION
# ==============================================

# Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Use Gemini AI (True/False) - Set to False to use Ollama instead
USE_GEMINI=True

# Ollama Model (used if USE_GEMINI=False)
OLLAMA_MODEL=llama3

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL (SQLite by default)
# For SQLite: sqlite:///./test.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./test.db

# ==============================================
# JWT/AUTHENTICATION CONFIGURATION
# ==============================================

# Secret key for JWT token generation (change this to a random string)
SECRET_KEY=your-secret-key-here-change-this-to-random-string

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server host
HOST=127.0.0.1

# Server port
PORT=8000

# Debug mode (True/False)
DEBUG=True

# ==============================================
# NOTES
# ==============================================
# 1. Always keep your .env file secure and never commit it
# 2. Generate a strong SECRET_KEY for production
# 3. Get Gemini API key from Google AI Studio
# 4. For Ollama, make sure Ollama server is running locally

